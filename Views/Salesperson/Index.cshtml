                    <td>
                        @Html.ActionLink("Edit","Edit", new {id = salesPerson.Id}, null)
                    </td>
                    <td>
                     
                        @Html.ActionLink("Delete", "Delete", new {id= salesPerson.Id}, null)
                    </td>
                </tr>
            }
        </tbody>    
    </table>
