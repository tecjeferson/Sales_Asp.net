@model List<aspnetapp.Models.SalesPerson>


<p>Salesperson TODO</p>


<form method="post">
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                
                <th>SalesPerson</th>
            </tr>
        </thead>
        <tbody>
          @foreach (var salesPerson in Model)
            {
                <tr>
                    <td>@salesPerson.Id</td>
                    <td>@salesPerson.Salesperson</td>
                                      
                                      
                    <td>
                        @Html.ActionLink("Edit","Edit", new {id = salesPerson.Id}, null)
                    </td>
                    <td>
                     
                        @Html.ActionLink("Delete", "Delete", new {id= salesPerson.Id}, null)
                    </td>
                </tr>
            }
            
        </tbody>    
    </table>
</form>