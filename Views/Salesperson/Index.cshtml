    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                
                <th>Salesperson</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var salesPerson in Model)
            {
                <tr>
                    <td>@salesPerson.Id</td>
