@model List<aspnetapp.Models.Sales>

<h2>Sales</h2>
<div>
    @Html.ActionLink("Create New Sales","Create")
</div>
<form method="post">
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Customer</th>
                <th>Salesperson</th>
                <th>Price</th>
                <th>Payment</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sales in Model)
            {
                <tr>
                    <td>@sales.Id</td>
                    <td>@sales.CustomerName</td>
                    <td>@sales.Salesperson</td>
                    <td>@sales.Price</td>
                    @if (sales.hasPayment )
                    {
                        <td>Payed</td>
                    }
                    else 
                    {
                        <td>To be Payed</td>
                    }
                    <td>
                        @Html.ActionLink("Edit","Edit", new {id = sales.Id}, null)
                    </td>
                    <td>
                        <!-- <button type="submit" asp-page-handler="delete" asp-route-id="@sales.Id">Delete</button> -->
                        @Html.ActionLink("Delete", "Delete", new {id= sales.Id}, null)
                    </td>
                </tr>
            }
        </tbody>    
    </table>
</form>